<!DOCTYPE HTML>
<html>
<head>
  <meta charset="UTF-8">
  <!-- スタイルシートのリンク -->
  <link rel="stylesheet" href="reset.css">
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body style="background-image: url('/assets/background.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <!-- ヘッダー部分の描画 -->
  <%= render "shared/header" %>

  <div class="container2">
    <div class="center-box">
      <!-- ログインフォーム -->
      <%= form_with model: @user, url: new_user_session_path, class: "form-box", local: true do |f| %>
        <!-- メールアドレス入力フィールド -->
        <%= f.email_field :email, class: "feedback-input", placeholder: "Email" %>
        <!-- パスワード入力フィールド -->
        <%= f.password_field :password, class: "feedback-input", placeholder: "password" %>
        <!-- 送信ボタン -->
        <%= f.submit "ログイン", class: "login-btn" %>
      <% end %>
    </div>
  </div>

  <!-- フッター部分の描画 -->
  <%= render "shared/footer" %>
</body>
</html>